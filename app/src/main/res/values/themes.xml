<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Brainstormia" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Usando o azul escuro em vez do preto -->
        <item name="windowSplashScreenBackground">@color/background_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_bolt_foreground_white</item>
        <!-- Mantendo a cor secundária para o fundo do ícone -->
        <item name="windowSplashScreenIconBackgroundColor">@color/secondary</item>
        <item name="postSplashScreenTheme">@style/Theme.Brainstormia</item>
    </style>
</resources>